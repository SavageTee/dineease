<div class="container mt-5">
    <div class="accordion" id="menuAccordion">
      <% data[0].forEach((item, index) => { %>
        <div class="accordion-item">
          <h2 class="accordion-header" id="heading<%= item.menus_items_id %>">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= item.menus_items_id %>" aria-expanded="true" aria-controls="collapse<%= item.menus_items_id %>">
              <%= item.item_name %> - <%= item.price %> <%= item.currency_code %>
            </button>
          </h2>
          <div id="collapse<%= item.menus_items_id %>" class="accordion-collapse collapse" aria-labelledby="heading<%= item.menus_items_id %>" data-bs-parent="#menuAccordion">
            <div class="accordion-body">
              <strong>Description:</strong> <%= item.item_description %><br>
              <strong>Category:</strong> <%= item.category_name %> - <%= item.subcategory_name %><br>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
</div>